FROM unfoldingword/dcs:latest-qa
LABEL maintainer="maintainers@gitea.io"

EXPOSE 22 3000

RUN apk --no-cache add \
    bash \
    ca-certificates \
    curl \
    gettext \
    git \
    linux-pam \
    openssh \
    s6 \
    sqlite \
    su-exec \
    gnupg

RUN addgroup \
    -S -g 1002 \
    richmahn && \
  adduser \
    -S -H -D \
    -h /data/git \
    -s /bin/bash \
    -u 1002 \
    -G git \
    richmahn && \
  echo "richmahn:*" | chpasswd -e

ENV USER richmahn
ENV GITEA_CUSTOM /data/gitea

WORKDIR /data/gitea

RUN mkdir /data/gitea/conf
RUN mkdir /data/gitea/templates
COPY ./conf/app.ini-codesandbox /data/gitea/conf/app.ini
COPY ./templates/home.tmpl /data/gitea/templates/home.tmpl
RUN chown -R richmahn:richmahn /data

VOLUME ["/data"]

ENTRYPOINT ["/usr/bin/entrypoint"]
CMD ["/bin/s6-svscan", "/etc/s6"]
